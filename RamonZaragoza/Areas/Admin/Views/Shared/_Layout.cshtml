@{
    Layout = null;
    //comprueebo que controldor actual
    string controlador = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    if (Session["nombre"] != null)
    {
        ViewBag.Usuario = Session["nombre"].ToString();
        var foto = Session["foto"].ToString();
        if (foto == "noFoto.jpg")
        {
            ViewBag.Foto = Url.Content("~/Content/images/noFoto.jpg");
        }
        else
        {
            ViewBag.Foto = Url.Content(Helper.SubirArchivos.GetRutaFotoPerfil() + Session["foto"]);
        }
        ViewBag.Alerta = Convert.ToInt32(Session["MensajesSinLeer"]);

    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>@ViewBag.Title  | Portfolio V 1.0.0</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />

    <link href="~/Areas/Admin/Content/admin-estilo.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/bootstrap.theme.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />


    <script src="~/Scripts/jquery-1.11.3.js"></script>

</head>
<body>
    @if (controlador != "login")
    {
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        Portfolio V 1.0.0
                    </a>
                </div>

                <!-- ENLACES -->
                <div class="collapse navbar-collapse" id="menu">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="~/admin/usuario">Acerca de mí</a>
                        </li>
                        <li>
                            <a href="~/admin/experiencia?tipo=1">Experiencia</a>
                        </li>
                        <li>
                            <a href="~/admin/experiencia?tipo=2">Estudios</a>
                        </li>
                        <li>
                            <a href="~/admin/Conocimiento">Conocimientos</a>
                        </li>
                        <li>
                            <a href="~/admin/Adjuntos">Adjuntos</a>
                        </li>
                        <li>
                            <a href="~/admin/Conocimiento">Candidaturas</a>
                        </li>
                        <li>
                            @if (ViewBag.Alerta > 0)
                            {
                                <a id="alerta" style="color:red;" href="~/admin/Mensaje">Mensajes(@ViewBag.Alerta)</a>
                            }
                            else
                            {
                                <a href="~/admin/Mensaje">Mensajes</a>
                            }
                            
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <img id="user-pic" src="@ViewBag.Foto" />
                                <b>Hola</b>, <span id="mi-nombre">@ViewBag.Usuario</span> <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="~/">Ver Mi Perfil</a>
                                    <hr />
                                </li>
                                <li>
                                    @Html.ActionLink("Cambiar Contraseña", "CambioDePass", "Usuario")
                                </li>
                                <li>
                                    @Html.ActionLink("Cambiar Foto Perfil", "FotoPerfil", "Usuario")
                                </li>
                                <li>
                                    <hr />
                                    @Html.ActionLink("Finalizar Sesión", "Logout", "Login")
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    }

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>
    <!--FOOTER-->
    @if (controlador != "login")
    {

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <footer class="well text-center">
                        2015 - Proyecto desarrollado por <a target="_blank" href="http://anexsoft.com">Anexsoft</a>.
                    </footer>
                </div>
            </div>
        </div>

    }

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script src="~/Scripts/misAjax.js"></script>
    
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
