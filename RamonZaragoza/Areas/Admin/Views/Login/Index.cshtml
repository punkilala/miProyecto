@model Models.Usuario
@{
    ViewBag.Title = "Autenticación";
}

<div id="login">
    <h1 class="page-header text-center">Entrada al sistema</h1>

    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading">Acceso al sistema</div>
                @using (Ajax.BeginForm("Login", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "mensaje",
                    LoadingElementId = "cargando",
                    OnSuccess = "onSuccess"

                }))
                {
                    @Html.AntiForgeryToken()
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @placeholder = "ingrese su correo electrónico" })
                            @Html.ValidationMessageFor(u => u.Email, null, new { @class = "label label-danger" })
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            @Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "ingrese su contraseña" })
                            @Html.ValidationMessageFor(u => u.Password, null, new { @class = "label label-danger" })
                        </div>
                        <div class="col-xs-12">
                            <div id="mensaje" class="col-xs-9"></div>
                            <div class="pull-right">
                                <img id="cargando" style="display:none;" src="~/Content/images/ajax-loader.gif" />
                                <button class="btn btn-primary" type="submit">
                                    Ingresar
                                </button>
                            </div>
                        </div>
                    </div>
                }
                <!--FIN FORM-->
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<!--pidiendo una validacion de nuestro formulario en lado de cliente, esta validacion se hace conforme a las anotaciones-->
@Scripts.Render("~/bundles/jqueryval")
